<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.leyi.snack.mapper.UserMapper">

    <select id="selectByPhone" resultType="com.leyi.snack.entity.User">
        SELECT * FROM user WHERE phone = #{phone}
    </select>

    <insert id="save" parameterType="com.leyi.snack.entity.User" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO user (phone, name, avatar)
        VALUES (#{phone}, #{name}, #{avatar})
    </insert>

    <update id="update" parameterType="com.leyi.snack.entity.User">
        UPDATE user SET updated_at = NOW() WHERE id = #{id}
    </update>

</mapper>
